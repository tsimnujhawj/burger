<div class="row">
    <div class="col-md-6">
<ul>
{{#each burg}}
{{#unless this.devoured}}
<li class="burger-item">
<form action="/burger/{{this.id}}?_method=PUT" method="POST">
<button type="submit" class="btn btn-success">{{this.id}}. {{this.burger_name}}</button>
</form>
</li>
{{/unless}}
{{/each}}
</ul>
    </div>

    <div class="col-md-6">
<ul>
{{#each burg}}
{{#if this.devoured}}
<li>
{{this.id}}. {{this.burger_name}}
</li>
{{/if}}
{{/each}}
</ul>
    </div>
</div>

<div class="row input-section">
    <div class="col-md-12">
        <form action="/burger" method="POST">
            <input type="text" id="burger-name" name="burger_name" placeholder="Your burger name...">
            <button type="submit" class="btn btn-success add-burger">Add Your Burger</button>
        </form>
    </div>
</div>